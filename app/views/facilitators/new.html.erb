

<div class= "header">
 <div class= "container-fluid">
  <div style="float: left;"><button type="button" onclick="window.location.href='/'" class="btn btn-default navbar-btn">Home</button></div>
  <h1> Admin Home Page </h1>

 </div>
</div>

<div class= "container">
 <div class= "row">

  <div class= "col_centered-xs-3">
    <div class="well">
      <%= form_for(@facilitator) do |f| %>
        <div class="form-group"><%= f.text_field :first, :placeholder => "First Name" %></div>
        <div class="form-group"><%= f.text_field :last, :placeholder => "Last Name" %></div>
        <div class="form-group"><%= f.email_field :email, :placeholder => "Email" %></div>
        <div class="form-group"><%= f.password_field :password_digest, :placeholder => "Password" %></div>
        <div class="form-group"><%= f.submit "Add Facilitator", formaction: admin_add_facilitator_path, class: "btn btn-success" %></div>
      <% end %>
      </div>
    </div>
  <div class="col_centered-xs-6"></div>
  <div class="col_centered-xs-3">
    <div class="well">
   <%= form_for(@facilitator) do |f| %>
      <div class="form-group"><%= f.text_field :first, :placeholder => "First Name" %></div>
      <div class="form-group"><%= f.text_field :last, :placeholder => "Last Name" %></div>
      <div class="form-group"><%= f.submit "Remove Facilitator", formaction: admin_remove_facilitator_path, class: "btn btn-danger" %></div>
    <% end %>
    </div>
  </div>



<div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-12">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: "alert alert-#{name}" %>
          <% end -%>
        </div>
      </div>

  </div>
  </div>
 </div>
</div>



