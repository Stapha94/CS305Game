<div class= "header">
 <div class= "container">
   <div style="float: left;"><button type="button" onclick="window.location.href='/'" class="btn btn-default navbar-btn">Back</button></div>
   <div class="row">
    
     <h1>Login</h1>
     
   </div>
 </div>
</div>


<div id="main-container" class="container">
     <div class="row">
      <div class="col-xs-3">
        </div>
        <div class="col-xs-6">
              <%= form_for(:session, url: login_path) do |f| %>
                <div class="form-group"><%= f.email_field :email, :placeholder => "Email" %></div>
	              <div class="form-group"><%= f.password_field :password_digest, :placeholder => "Password" %></div>
	              <div class="form-group"><%= f.submit "Log in", class: "btn btn-success" %></div>
              <% end %>
        </div>
        <div class="col-xs-3">
        </div>

        <div class ="row">
          <div class="col-xs-12">
        	  <% flash.each do |name, msg| -%>
	          <%= content_tag :div, msg, class: "alert alert-#{name}" %>
            <% end -%>
          </div>
        </div>
      </div>
  </div>