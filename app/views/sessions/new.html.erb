<div class= "header">
 <div class= "container-fluid">
   <button type="submit" onclick="window.location.href='/'" class="btn btn-warning" style="float: right;">Back</button>
   <div class="row">
    
     <h1>Login</h1>
     
   </div>
 </div>
</div>


<div id="main-container" class="container">
     <div class="row">
        <div class="col-xs-12">
          <div class="well" style="margin-top: 10vw">
            <% if request.fullpath == '/user-login' %>
              <%= form_for(:session, url: loginuser_path) do |f| %>
                <div class="form-group"><%= f.email_field :email, :placeholder => "Email" %></div>
	              <div class="form-group"><%= f.password_field :password_digest, :placeholder => "Password" %></div>
	              <div class="form-group"><%= f.submit "Log in", class: "btn btn-success" %></div>
              <% end %>
            <% elsif request.fullpath == '/student-login' %>
              <%= form_for(:session, url: loginstudent_path) do |f| %>
                  <div class="form-group" style="margin-left: 30%;"><%= f.text_field :sid, :placeholder => "SID"%></div>
                  <div class="form-group" style="margin-left: 30%;"><%= f.submit "Log in", class: "btn btn-success" %></div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-xs-3">
        </div>

        <div class ="row">
          <div class="col-xs-12">
        	  <% flash.each do |name, msg| -%>
	          <%= content_tag :div, msg, class: "alert alert-#{name}" %>
            <% end -%>
          </div>
        </div>
      </div>
  </div>